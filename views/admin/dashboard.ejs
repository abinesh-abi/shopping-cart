<script>
    //for higlight sidebar selection
     let navHilight= document.getElementById("dashboard")
      navHilight.classList.add('active')

    let totalUsers = document.getElementById('totalUsers')
    fetch("http://127.0.0.1:3000/admin/check",{
        method:'get'
    }).then(data=>data.json())
    .then(data=>{
        console.log(data)
        totalUsers.innerHTML = data.length
    })
    
    fetch("http://127.0.0.1:3000/admin/productManagement/check",{
        method: 'get'
    }).then(data=>data.json())
    .then(data=>{
        document.getElementById('totalProducts').innerHTML = data.length
    })

    fetch("/admin/dashboard/totalErnigs",{
        method: 'get'
    }).then(data=>data.json())
    .then(data=>{
        if (data>1000) {
            let num = parseInt(data/1000)
            document.getElementById('totalErnigs').innerHTML ="₹ "+ num+'K'
        }else{
            document.getElementById('totalErnigs').innerHTML ="₹ "+ data
        }
    })
    
</script>
