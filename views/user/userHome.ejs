        <div id="hot">
          <%for(index in categories){ %>
          <div class="box py-4">
            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <h2 class="mb-0"><a href="/product/categoryView/<%=categories[index]._id%>"><%=categories[index].name%></a></h2>
                </div>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="product-slider owl-carousel owl-theme">
              <%for(product of categories[index].products){ %>
              <div class="item">
                <div class="product">
                  <div class="flip-container">
                    <div class="flipper">
                      <div class="front"><a href="/product/view/<%=product._id%>"><img src="/images/<%=product._id%>.jpg" alt="" class="img-fluid"></a></div>
                      <div class="back"><a href="/product/view/<%=product._id%>"><img src="/images/<%=product._id%>.jpg" alt="" class="img-fluid"></a></div>
                    </div>
                  </div><a href="/product/view/<%=product._id%>" class="invisible"><img src="/images/<%=product._id%>.jpg" alt="" class="img-fluid"></a>
                  <div class="text">
                    <h3><%=product.name%></h3>
                     <p class="price"><del class="text-danger">&#8377 <%= product.price%></del></i></p>
                    <p class="price"> 
                      &#8377 <%=  product.price - (product.price * categories[index].offer/100)  %>
                    </p>
                  </div>
                </div>
                <!-- /.product-->
              </div>
              <%}%>
            </div>
            <!-- /.container-->
          </div>
          <!-- /#hot-->
          <!-- *** HOT END ***-->
              <%}%>
